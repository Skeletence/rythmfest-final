<%- include('partials/header') %>

<main class="container">
    <h1 class="page-title">Our Venues</h1>
    
    <div class="venues-grid"> 
        
        <% if (venues.length > 0) { %>
            <% venues.forEach(venue => { %>
                
                <div class="venue-card">
                    
                    <div class="venue-image-wrapper">
                        <img src="<%= venue.image %>" alt="<%= venue.title %>" style="width: 100%; height: 180px; object-fit: cover; border-radius: 4px;">
                    </div>

                    <div class="venue-info">
                        <h3 style="margin-top: 15px;"><%= venue.title %></h3>
                        <p><strong>City:</strong> <%= venue.location %></p>
                        
                        <% if (venue.shows) { %>
                            <p><strong>Events Hosted:</strong> <%= venue.shows %></p>
                        <% } %>
                    </div>

                </div>

            <% }) %>
        <% } else { %>
            <p>No venues found in the database.</p>
        <% } %>

    </div>
</main>

<%- include('partials/footer') %>