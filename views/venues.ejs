<%- include('partials/header') %>

<main class="container">
    <h1 class="page-title">Our Venues</h1>

    <div style="margin-bottom: 30px; text-align: center;">
        <input type="text" id="searchInput" onkeyup="filterVenues()" placeholder="Search for city or stadium..." 
        style="padding: 12px; width: 80%; max-width: 400px; border: 1px solid #ccc; border-radius: 25px; outline: none; font-size: 16px;">
    </div>

    <div id="venues-container" class="venues-grid"> 
        
        <% if (venues.length > 0) { %>
            <% venues.forEach(venue => { %>
                
                <div class="venue-card">
                    
                    <div class="venue-image-wrapper">
                        <img src="<%= venue.image %>" alt="<%= venue.title %>" style="width: 100%; height: 180px; object-fit: cover; border-radius: 4px;">
                    </div>

                    <div class="venue-info">
                        <h3 style="margin-top: 15px;"><%= venue.title %></h3>
                        <p><strong>City:</strong> <%= venue.location %></p>
                        
                        <% if (venue.shows) { %>
                            <p><strong>Events Hosted:</strong> <%= venue.shows %></p>
                        <% } %>
                    </div>

                </div>

            <% }) %>
        <% } else { %>
            <p>No venues found.</p>
        <% } %>

    </div>
</main>

<script>
    function filterVenues() {
        // 1. Get input value
        const input = document.getElementById('searchInput');
        const filter = input.value.toUpperCase();
        
        // 2. Get the container and cards
        const container = document.getElementById('venues-container');
        const cards = container.getElementsByClassName('venue-card');

        // 3. Loop and Toggle Visibility
        for (let i = 0; i < cards.length; i++) {
            const text = cards[i].textContent || cards[i].innerText;
            
            // Check if text matches search
            if (text.toUpperCase().indexOf(filter) > -1) {
                cards[i].style.display = ""; // Show
            } else {
                cards[i].style.display = "none"; // Hide
            }
        }
    }
</script>

<%- include('partials/footer') %>