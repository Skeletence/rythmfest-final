<%- include('partials/header') %>

<main class="container">
    <h1 class="page-title">Upcoming Concerts</h1>

    <div style="margin-bottom: 30px; text-align: center;">
        <input type="text" id="searchInput" onkeyup="filterConcerts()" placeholder="Search by artist or city..." 
        style="padding: 12px; width: 80%; max-width: 400px; border: 1px solid #ccc; border-radius: 25px; outline: none; font-size: 16px;">
    </div>

    <div id="concerts-container" class="events-grid"> 
        
        <% if (concerts.length > 0) { %>
            <% concerts.forEach(concert => { %>
                
                <div class="event-card">
                    
                    <div class="event-card-image">
                        <img src="<%= concert.image %>" alt="<%= concert.title %>">
                    </div>

                    <div class="event-details" style="flex-grow: 1;">
                        <h3 style="margin-top: 15px;"><%= concert.title %></h3>
                        <p><strong>Artist:</strong> <%= concert.artist %></p>
                        <p><strong>Date:</strong> <%= concert.date %></p>
                        <p><strong>Location:</strong> <%= concert.location %></p>
                    </div>

                    <div class="event-action">
                        <a href="/events/<%= concert._id %>" class="btn-standard">
                            Get Tickets (<%= concert.price %>)
                        </a>
                    </div>

                </div>

            <% }) %>
        <% } else { %>
            <p>No concerts found.</p>
        <% } %>

    </div>
    
    <a href="#" class="view-all-btn" style="background-color: #9d1a33; color: white; border: none; margin-top: 30px;">View All Concerts</a>

</main>

<script>
    function filterConcerts() {
        const input = document.getElementById('searchInput');
        const filter = input.value.toUpperCase();
        const container = document.getElementById('concerts-container');
        const cards = container.getElementsByClassName('event-card');

        for (let i = 0; i < cards.length; i++) {
            const text = cards[i].textContent || cards[i].innerText;
            if (text.toUpperCase().indexOf(filter) > -1) {
                cards[i].style.display = "";
            } else {
                cards[i].style.display = "none";
            }
        }
    }
</script>

