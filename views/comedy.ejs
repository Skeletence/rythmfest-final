<%- include('partials/header') %>

<main class="container">
    <h1 class="page-title">Comedy Shows</h1>
    
    <div style="margin-bottom: 30px; text-align: center;">
        <input type="text" id="searchInput" onkeyup="filterComedy()" placeholder="Search for comedians..." 
        style="padding: 12px; width: 80%; max-width: 400px; border: 1px solid #ccc; border-radius: 25px; outline: none; font-size: 16px;">
    </div>

    <div id="comedy-container" class="events-grid">
        
        <% if (comedyEvents.length > 0) { %>
            <% comedyEvents.forEach(event => { %>
                
                <div class="event-card">
                    <div class="event-card-image">
                        <img src="<%= event.image %>" alt="<%= event.title %>">
                    </div>
                    
                    <div class="event-details" style="flex-grow: 1;">
                        <h3 style="margin-top: 15px;"><%= event.title %></h3>
                        <p style="color: #aaa; margin-bottom: 15px;"><%= event.artist %></p>
                    </div>

                    <div class="event-action">
                        <a href="/events/<%= event._id %>" class="btn-standard" style="background-color: #00f2ea; color: black;">
                            Get Tickets
                        </a>
                    </div>
                </div>

            <% }) %>
        <% } else { %>
            <p>No comedy shows found.</p>
        <% } %>

    </div>

    <a href="#" class="view-all-btn" style="background-color: #00f2ea; color: black; border: none; margin-top: 30px;">Explore More Shows</a>
</main>

<script>
    function filterComedy() {
        const input = document.getElementById('searchInput');
        const filter = input.value.toUpperCase();
        const container = document.getElementById('comedy-container');
        const cards = container.getElementsByClassName('event-card');

        for (let i = 0; i < cards.length; i++) {
            const text = cards[i].textContent || cards[i].innerText;
            if (text.toUpperCase().indexOf(filter) > -1) {
                cards[i].style.display = "";
            } else {
                cards[i].style.display = "none";
            }
        }
    }
</script>

<%- include('partials/footer') %>