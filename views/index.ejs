<%- include('partials/header') %>
    <main>
        <section class="hero">
            <h1>Live The Beat</h1>
            <p>Discover amazing concerts, events and festivals across India.</p>
            <div class="search-bar">
                <input type="text" placeholder="Search events, artists...">
                <input type="text" placeholder="Enter Location">
                <input type="text" placeholder="Enter Date (MM/DD/YYYY)">
                <button>Search Events</button>
            </div>
            <div class="stats">
                <div>10K+ <span>Events</span></div>
                <div>200+ <span>Cities</span></div>
                <div>1M+ <span>Fans</span></div>
            </div>
        </section>

        <section class="container">
            <h2 class="section-title">Featured Events</h2>
            <div class="events-grid">
                <div class="event-card">
                    <div class="event-card-image">
                        <img src="images/events.jpg" alt="Festival Poster" class="event-card-image">
                        <div class="popular-tag">Popular</div>
                        
                    </div>
                    <div class="event-card-content">
                        <h3>Electric Dreams Festival</h3>
                        <p>Arijit Singh, Nucleya, Ritviz</p>
                        <p>Jan 18, 2026 &nbsp;&nbsp;&nbsp; 8:00 PM</p>
                        <p>At: MMRDA Grounds, Mumbai</p>
                        <div class="event-card-footer">
                            <span class="price">From ₹11999</span>
                            <a href="/event-details" class="get-tickets-btn">Get Tickets</a>
                        </div>
                    </div>
                </div>
                <div class="event-card">
                    <div class="event-card-image">
                        <img src="images/events2.jpeg" alt="Festival Poster" class="event-card-image">
                    </div>
                    <div class="event-card-content">
                        <h3>Rock Revolution</h3>
                        <p>Parikrama, Indian Ocean</p>
                        <p>Nov 22, 2025 &nbsp;&nbsp;&nbsp; 10:00 PM</p>
                        <p>At: Jawaharlal Nehru Stadium, Delhi</p>
                        <div class="event-card-footer">
                            <span class="price">From ₹6999</span>
                            <a href="/event-details2" class="get-tickets-btn">Get Tickets</a>
                        </div>
                    </div>
                </div>
                <div class="event-card">
                    <div class="event-card-image">
                        <img src="images/events3.webp" alt="Festival Poster" class="event-card-image">
                        <div class="popular-tag">Popular</div>
                        
                    </div>
                    <div class="event-card-content">
                        <h3>Sunburn Goa 2025</h3>
                        <p>Martin Garrix, DJ Snake</p>
                        <p>Dec 28, 2025 &nbsp;&nbsp;&nbsp; 4:00 PM</p>
                        <p>At: Vagator Beach, Goa</p>
                        <div class="event-card-footer">
                            <span class="price">From ₹9499</span>
                            <a href="/event-details3" class="get-tickets-btn">Get Tickets</a>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/festivals" class="view-all-btn">View All Events</a>
        </section>

        <section class="container">
            <h2 class="section-title">Browse By Category</h2>
            <div class="category-grid">
                <div class="category-card">
                    <h3>Concerts</h3>
                    <p>Live Music Performances</p>
                    <a href="/concerts" class="category-btn btn-concerts">5657 Concerts</a>
                </div>
                <div class="category-card">
                    <h3>Festivals</h3>
                    <p>Multi-Day Celebrations</p>
                    <a href="/festivals" class="category-btn btn-festivals">580 Festivals</a>
                </div>
                <div class="category-card">
                    <h3>Comedy</h3>
                    <p>Stand-Up & Comedy Shows</p>
                    <a href="/comedy" class="category-btn btn-comedy">1488 Shows</a>
                </div>
            </div>
        </section>
    </main>

    <div class="subscription-section">
        <h2>Never Miss A Beat</h2>
        <p>Subscribe to get notified about the hottest events and exclusive pre-sale access</p>
        <form class="subscription-form">
            <input type="email" placeholder="Enter Email">
            <button type="submit">Subscribe</button>
        </form>
    </div>

    <footer>
        <div class="footer-container">
            <div class="footer-section">
                <h3>RhythmFest</h3>
                <p>Your ultimate destination for live entertainment. From concerts to comedy, we've got the tickets to your next adventure.</p>
            </div>
            <div class="footer-section">
                <h3>Events</h3>
                <ul>
                    <li><a href="/concerts">Concerts</a></li>
                    <li><a href="/festivals">Festivals</a></li>
                    <li><a href="/comedy">Comedy</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Socials</h3>
                <ul>
                    <li><a href="https://www.youtube.com/">Youtube</a></li>
                    <li><a href="https://www.instagram.com/">Instagram</a></li>
                    <li><a href="https://www.x.com/">Twitter (X)</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            © 2025 RhythmFest. All rights reserved.
        </div>
    </footer>

</body>
</html>