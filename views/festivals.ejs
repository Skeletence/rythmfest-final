<%- include('partials/header') %>

<main class="container">
    <h1 class="page-title">Popular Festivals</h1>
    
    <div style="margin-bottom: 30px; text-align: center;">
        <input type="text" id="searchInput" onkeyup="filterEvents()" placeholder="Search festivals..." 
        style="padding: 12px; width: 80%; max-width: 400px; border: 1px solid #ccc; border-radius: 25px; outline: none; font-size: 16px;">
    </div>

    <div id="events-container" class="events-grid">
        
        <% if (festivals.length > 0) { %>
            <% festivals.forEach(festival => { %>
                
                <div class="event-card">
                    <img src="<%= festival.image %>" alt="<%= festival.title %>">
                    
                    <div class="event-details" style="flex-grow: 1;">
                        <h3><%= festival.title %></h3>
                        <p><strong>Artists:</strong> <%= festival.artist %></p>
                        <p><strong>Date:</strong> <%= festival.date %></p>
                        <p><strong>Loc:</strong> <%= festival.location %></p>
                    </div>

                    <div class="event-action">
                        <a href="/events/<%= festival._id %>" class="btn-standard">
                            Get Tickets (<%= festival.price %>)
                        </a>
                    </div>
                </div>

            <% }) %>
        <% } else { %>
            <p>No festivals found.</p>
        <% } %>

    </div>
</main>

<script>
    function filterEvents() {
        const input = document.getElementById('searchInput');
        const filter = input.value.toUpperCase();
        const container = document.getElementById('events-container');
        const cards = container.getElementsByClassName('event-card');

        for (let i = 0; i < cards.length; i++) {
            const text = cards[i].textContent || cards[i].innerText;
            if (text.toUpperCase().indexOf(filter) > -1) {
                cards[i].style.display = "";
            } else {
                cards[i].style.display = "none";
            }
        }
    }
</script>

